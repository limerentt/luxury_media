{
  "name": "luxury-account",
  "version": "1.0.0",
  "description": "Luxury Account in One Click - Production-ready platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:migrate": "docker exec -i luxury-account-clickhouse-1 clickhouse-client < database/schema.sql",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v",
    "docker:build": "docker compose up --build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "turbo": "^1.13.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}